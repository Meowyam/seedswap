<div id="seeds"></div>

<script type="text/javascript">

    $(function() {
	window.router = new Seedswap.Routers.SeedsRouter({seeds: <%= @seeds.to_json.html_safe %>});
	Backbone.history.start();
    });

</script>

<h1>Listing seeds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Genus</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seeds.each do |seed| %>
  <tr>
    <td><%= seed.name %></td>
    <td><%= seed.genus %></td>
    <td><%= link_to 'Show', seed %></td>
    <td><%= link_to 'Edit', edit_seed_path(seed) %></td>
    <td><%= link_to 'Destroy', seed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Seed', new_seed_path %>
